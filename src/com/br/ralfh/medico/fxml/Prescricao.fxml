<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="fundo" stylesheets="@../css/Pacientes.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.br.ralfh.medico.PrescricaoController">
   <children>
      <HBox layoutX="242.0" layoutY="120.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <VBox spacing="4.0">
                     <children>
                        <Label text="1 - Medicamento:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <HBox alignment="CENTER_LEFT" spacing="4.0">
                           <children>
                              <TextField fx:id="editMedicamento" prefWidth="260.0" />
                              <Button fx:id="btnApagaChaveMedicamento" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#btnApagaChaveMedicamentoClicked" prefHeight="25.0" prefWidth="25.0" styleClass="botaopq" textAlignment="CENTER">
                                 <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" styleClass="botaopq">
                                       <image>
                                          <Image url="@../imagens/Draw-Eraser.png" />
                                       </image>
                                    </ImageView>
                                 </graphic></Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <TabPane prefHeight="400.0" prefWidth="300.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                      <Tab text="Princípio Ativo">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0">
                                 <children>
                                    <ListView fx:id="listaPrincipio" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                 </children>
                              </AnchorPane>
                        </content>
                      </Tab>
                      <Tab text="Nome Comercial">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <ListView fx:id="listaNomeComercial" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                 </children>
                              </AnchorPane>
                        </content>
                      </Tab>
                    </tabs>
                  </TabPane>
                  <VBox spacing="4.0">
                     <children>
                        <Label text="Grupo" />
                        <ComboBox fx:id="cbGrupo" prefWidth="280.0" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0" prefWidth="220.0" spacing="5.0">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="2 - Posologia:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <HBox spacing="4.0">
                           <children>
                              <TextField fx:id="editPosologia" prefWidth="170.0" />
                              <Button fx:id="btnApagaChavePosologia" mnemonicParsing="false" onAction="#btnApagaChaveModoUsoClicked" prefWidth="25.0" styleClass="botaopq">
                                 <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" styleClass="botaopq">
                                       <image>
                                          <Image url="@../imagens/Draw-Eraser.png" />
                                       </image>
                                    </ImageView>
                                 </graphic></Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <ListView fx:id="listaPosologias" prefHeight="400.0" />
               </children>
            </VBox>
            <VBox layoutX="211.0" layoutY="10.0" spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="3 - Via de administração:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <VBox spacing="10.0">
                           <children>
                              <RadioButton fx:id="rbUsoInterno" mnemonicParsing="false" text="Uso interno">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="tgViaAdmin" />
                                 </toggleGroup></RadioButton>
                              <RadioButton fx:id="rbUsoExterno" layoutX="10.0" layoutY="27.0" mnemonicParsing="false" text="Uso externo" toggleGroup="$tgViaAdmin" />
                              <RadioButton fx:id="rbUsoTopico" layoutX="10.0" layoutY="44.0" mnemonicParsing="false" text="Uso tópico" toggleGroup="$tgViaAdmin" />
                              <RadioButton fx:id="rbUsoViaOral" layoutX="10.0" layoutY="61.0" mnemonicParsing="false" text="Uso via oral" toggleGroup="$tgViaAdmin" />
                              <RadioButton fx:id="rbUsoInjetavel" layoutX="10.0" layoutY="78.0" mnemonicParsing="false" text="Uso injetável" toggleGroup="$tgViaAdmin" />
                              <RadioButton fx:id="rbUsoOutros" layoutX="10.0" layoutY="78.0" mnemonicParsing="false" text="Outros" toggleGroup="$tgViaAdmin" />
                              <HBox spacing="4.0">
                                 <children>
                                    <TextField fx:id="editViaAdmin" prefWidth="130.0" />
                                    <Button fx:id="btnApagaChaveViaAdmin" mnemonicParsing="false" onAction="#btnApagaChaveAplicacaoClicked" prefWidth="25.0" styleClass="botaopq">
                                       <graphic>
                                          <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" styleClass="botaopq">
                                             <image>
                                                <Image url="@../imagens/Draw-Eraser.png" />
                                             </image>
                                          </ImageView>
                                       </graphic></Button>
                                 </children>
                              </HBox>
                           </children>
                           <VBox.margin>
                              <Insets left="5.0" top="5.0" />
                           </VBox.margin>
                        </VBox>
                     </children>
                  </VBox>
                  <VBox spacing="4.0">
                     <children>
                        <Label text="4 - Quantidade:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <HBox spacing="4.0">
                           <children>
                              <TextField fx:id="editQuantidade" prefWidth="130.0" />
                              <Button fx:id="btnApagaChaveQuantidade" mnemonicParsing="false" onAction="#btnApagaChaveQuantidadeClicked" prefWidth="25.0" styleClass="botaopq">
                                 <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" styleClass="botaopq">
                                       <image>
                                          <Image url="@../imagens/Draw-Eraser.png" />
                                       </image>
                                    </ImageView>
                                 </graphic></Button>
                           </children>
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Button fx:id="btnConfirma" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#actionConfirmar" prefHeight="60.0" prefWidth="92.0" styleClass="botaotool" text="Prescreve">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../imagens/accept.png" />
                                 </image>
                              </ImageView>
                           </graphic></Button>
                        <Button fx:id="btnCancela" contentDisplay="BOTTOM" layoutX="89.0" layoutY="10.0" mnemonicParsing="false" onAction="#actionCancelar" prefHeight="60.0" prefWidth="92.0" styleClass="botaotool" text="Cancela">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../imagens/Cancel-32.png" />
                                 </image>
                              </ImageView>
                           </graphic></Button>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
